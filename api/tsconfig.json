{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist"
  },
  "include": [
    "index.ts",
    "dev.ts",
    "config.ts",
    "chat.ts",
    "generate-blog-post.ts",
    "interpretar.ts",
    "notify/**/*.ts",
    "voice/**/*.ts"
  ],
  "exclude": ["node_modules"]
}